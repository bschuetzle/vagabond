
<div class="container">
  <%= render 'shared/flash' %>
  <div>
    <h1 class="form_header_text"><%= @user.name %></h1>
    <div class="form pro-pro-1">
      <%= image_tag(@user.photo.url(:profile), class: 'media-object profile_photo') %><br>
      <p class="user_info">Current Location: <%= @user.current_location %></p>
      <p class="user_info">Email: <%= @user.email %><br></p>

      <%= button_to "Update Profile", edit_user_path, method: :get, class: 'default_button' %>

  </div>
  <div class="user_popo pro-pro-2">
    <h3 class="user_posts_heading">Your Posts</h4>
    <% @posts.each do |post| %>
      <p class="user_posts"><%= link_to post.title, location_post_path(post.location_id, post.id) %></p>
    <% end %>
  </div>
  </div>
</div>
