<div class="container">
  <h1>Create a Vagrant Post</h1>
  <%= form_for ([@location, @post]), :html => {:class => 'form_for'} do |f| %>
  Post Title:  <%= f.text_field :title %> <br>
  Whatcha have to say?  <%= f.text_field :body %> <br>
    <%= f.submit "Post It!", class: 'default_button' %>
  <% end %>
 </div>
