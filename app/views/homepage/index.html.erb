

<!DOCTYPE html>
<html>
  <head>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDWWhvWicgH8LasYYaQ7HCtztjx2g2CjB0&callback=initMap">
    </script>
    <style>
      #map {
        height: 400px;
        width: 100%;
       }
    </style>
  </head>
  <body>

    <h1>Welcome to Vagrant</h1>

    <h2>Find Skrillex <a href="http://skrillex.com/tour/"> tour dates</a> near your location!!!</h2>
    <h2>Thinking of joining Isis? Watch these <a href="https://www.youtube.com/user/ThinkAgainTurnAway">videos</a> first.</h2>

    <%= content_tag :div, class: "locations_class", data: {locations: @locations} do %>
    <% end %>

    <div id="map"></div>
    <script>


      function initMap() {
        var bounds = new google.maps.LatLngBounds();
        var infowindow = new google.maps.InfoWindow();
        var map = new google.maps.Map(document.getElementById('map'), {

        });
        var location_data = $('.locations_class').data('locations');
        <% @locations.each do |location| %>
          <% coord = "{lat: #{location.lat}, lng: #{location.long}}" %>
          <% p coord %>
          var marker = new google.maps.Marker({
            position: <%= coord %>,
            map: map
          });
          bounds.extend(marker.position);
          <% city = "#{location.city}" %>
          <% p city %>
          google.maps.event.addListener(marker, 'click', (function(marker) {
            return function() {
              <% city = "#{location.city}" %>
              <% p city %>
              var info = "<%= "#{location.city}" %>";
              console.log(info);
              infowindow.setContent(info);
              infowindow.open(map, marker);
            }
          })(marker));

        <% end %>
        map.fitBounds(bounds);
      }

    </script>


  </body>
</html>
